{% extends 'base.html.twig' %}

{% block title %}Jobs{% endblock %}

{% block body %}
    <h1>Jobs</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ job.id }}</td>
            </tr>
            <tr>
                <th>Type_contract</th>
                <td>{{ job.typeContract }}</td>
            </tr>
            <tr>
                <th>Posted</th>
                <td>{{ job.posted ? job.posted|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ job.description }}</td>
            </tr>
            <tr>
                <th>Requirement</th>
                <td>{{ job.requirement }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_jobs_index') }}">back to list</a>

    <a href="{{ path('app_jobs_edit', {'id': job.id}) }}">edit</a>

    {{ include('jobs/_delete_form.html.twig') }}
{% endblock %}
